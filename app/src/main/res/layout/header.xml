<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="220dp"
              android:orientation="vertical"
              android:padding="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        card_view:cardCornerRadius="20dp"
        >

        <com.github.siyamed.shapeimageview.mask.PorterCircularImageView
            android:id="@+id/idImageAnimation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center|top"
            android:src="@mipmap/hello"
            />

        <LinearLayout
            android:id="@+id/option"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/videoYoutube"
            android:layout_gravity="bottom"
            android:background="#00ffffff"
            android:orientation="horizontal"
            android:weightSum="3"

            >

            <Button
                android:id="@+id/btnRecoder"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btnmic_not_active"
                android:gravity="center"
                android:text="Ghi Ã¢m"
                android:textAllCaps="false"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnMic"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btnmic_not_active"
                android:gravity="center"
                android:text="Mic"
                android:textAllCaps="false"
                android:textSize="15dp"/>

            <Button
                android:id="@+id/btnEqualizer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btnmic_not_active"
                android:gravity="center"
                android:text="Equalizer"
                android:textAllCaps="false"
                android:textSize="15dp"/>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>